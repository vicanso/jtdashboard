doctype html
html(lang='zh-CN', ng-app='jtApp')
  head
    meta(http-equiv='Content-Type', content='text/html; charset=UTF-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name="HandheldFriendly", content="True")
    meta(name="viewport", content="width=device-width, initial-scale=1, user-scalable=no")
    meta(http-equiv="cleartype", content="on")
    meta(name='keywords', content='')
    meta(name='description', content='')
    meta(name='author',content='小墨鱼 vicanso 腻味 tree')
    link(rel='icon', href='#{STATIC_URL_PREFIX}/img/favicon.ico')  
    title #{title}
    include ./inlinejs
    //CSS_FILES_CONTAINER
    if PATTERN
      - importer.import('/component/debug.js');
    - importer.import('/component/bootstrap.css', '/component/jquery.js', '/component/angular.js', '/component/angular-local-storage.js');

    - importer.import('/service/utils.js', '/service/http_log.js', '/service/debug.js');

    - importer.import('/js/global.js', '/css/global.css', '/service/user.js');

  body(ng-controller='AppController as app')
    block bodyContainer
    .mask.hidden(ng-class='{hidden : app.login.status == "hidden"}')
    .dialog.loginDialog.hidden(ng-class='{hidden : app.login.status == "hidden"}')
      .title 登录
        a.pull-right(href='javascript:;', ng-click='app.login.status = "hidden"'): i.glyphicon.glyphicon-remove
      .content
        .input-group
          span.input-group-addon 用户名：
          input.form-control(type='text', placeholder='请输入用户名')
        .input-group
          span.input-group-addon 密码：
          input.form-control(type='text', placeholder='请输入密码')


  include ./global_variable
  script.
    TIMING.end('html');
    TIMING.start('js');
  //JS_FILES_CONTAINER
  script.
    TIMING.end('js');
