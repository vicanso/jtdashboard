@import 'nib'
@import './constant'

.mtop5
  margin-top 5px
.mtop10
  margin-top 10px
.font12
  font-size 12px

.mask
  position fixed
  z-index 1
  left 0
  right 0
  bottom 0
  top 0
  background-color rgba(0, 0, 0, 0.3)

jt-dialog
  display block
.dialog
  position fixed
  z-index 2
  top 50%
  left 50%
  width 400px
  margin-left -(@width / 2)
  border 1px solid #e1e1e8
  background-color #fff
  .title
    line-height 40px
    background-color #1d3446
    padding 0 10px
    color #fff
    a
      color #ddd
      &:hover
        color #fff
  .content
    margin 15px
    

.loginDialog
  .input-group
    margin-bottom 15px
  .btn
    display block
  