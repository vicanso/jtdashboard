@import 'nib'
@import './common'

.menuContainer
  // display none
  background-image url(../images/menu_bg.png)
  width $MENU_WIDTH
  position fixed
  top 0
  left 0
  bottom -2px
  box-shadow 4px -1px 4px #000
  
  list-style none
  text-align center

  .logIn, .logOut
    position absolute
    bottom 0
    left 0
    right 0
    background-color #303136
    a
      padding 0
  .logo
    background-color #fe4e3f
    line-height $HEADER_HEIGHT
    color #fff
  .functions
    position absolute
    left 0
    right 0
    top 50px
    bottom 50px
    overflow scroll
    margin 0
    padding 0
  li
    margin 0
    position relative
  a
    margin 0 10px
    padding 30px 0
    display block
    color #6a6b70
    text-decoration none
    border-bottom 1px solid #32353c
    &.active, &:hover
      color #f0f0f0
    &.active:after
        content ' '
        position absolute
        left 0
        top 25px
        bottom @top
        width 2px
        background-color #fe4f3e
    .fa
      font-size 24px
      display block
      margin 10px