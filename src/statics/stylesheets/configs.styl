@import 'nib'
@import './common'

.configsPage
  $selectedItemsContainerHeight = 150px
  position absolute
  left $MENU_WIDTH + 15px
  top $HEADER_HEIGHT + 15px
  right 15px
  bottom 0
  // padding 15px
  .configs
    position absolute
    left 0
    right 0
    bottom 0
    top 0
    overflow scroll
    .op
      a
        margin-right 10px
        color #444
        &:hover
          color #111
      .fa.selected
        color #d44950
  .previewContainer
    position absolute
    left 15%
    right 15%
    top 10%
    bottom 10%
    .fa-close
      float right
      padding 4px 0
      cursor pointer
      &:hover
        color #d44950
    .content
      position absolute
      left 0
      top 45px
      right 0
      bottom 0
      overflow scroll
      .chart
        height 100%
      .code
        border none
        background-color transparent
